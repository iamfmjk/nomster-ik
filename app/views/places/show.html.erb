<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br /><br />
  <p><%= @place.description %></p>
  <% if @place.latitude.present? && @place.longitude.present? %>

      <script>

        function initMap() {
          var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: myLatLng
          });

          var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Hello World!'
          });
        }
      </script>
      <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDbZ-51D7_g1-hO-zCxBBMJZVBknDYK4uo&callback=initMap">
      </script>

  <div id="map"></div>
  <% end %>

<br />
  <div class="clearfix">
    <div class="float-right">
      <% if current_user && current_user == @place.user %>
        <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
         <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div> 
</div>
<div class="clear"></div>

<!-- Photos -->
<div class="col-10 offset-1 booyah-box">
  <h2>Photos</h2>
  <% @place.photos.each do |photo| %>
    <%= image_tag(photo.picture.url) %>
    <b><%= photo.caption %></b>
  <% end %>
</div>

<div class="col-10 offset-1">
  <h2>Add a Photo</h2>
  <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
    <%= f.input :picture, as: :file %>
    <%= f.input :caption %>
    <%= f.submit 'Add photo', class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="clear"></div>

<!-- Comments -->

<div class="col-10 offset-1">
  <h2 class="float-left">Comments</h2>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#commentsModal">
   Add a comment
  </button>

  <div class="clear"></div>

  <!-- Modal -->
  <div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Leave a comment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
            <%= f.input :message %>
            <%= f.input :rating, as: :select, collection: Comment::RATINGS %> 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @place.comments.each do |comment| %>
      <div class="col-12 col-sm-6">
        <blockquote>
          <% if comment.humanized_rating.present? %>
              <b><%= comment.humanized_rating %></b>
              <br />
          <% end %>
          <%= comment.message %>
            <small><%= comment.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
  <br />
  <br />
</div>

